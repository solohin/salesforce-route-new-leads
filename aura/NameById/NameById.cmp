<aura:component description="Show name of node by ID. Items list required">
    <aura:attribute name="id" type="String"/>
    <aura:attribute name="itemsList" type="List"/>
    <aura:attribute name="nameField" type="String" default="Name"/>

    <aura:attribute name="name" type="String" default="[Not found]"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    {!v.name}
</aura:component>